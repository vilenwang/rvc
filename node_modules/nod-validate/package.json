{
  "name": "nod-validate",
  "version": "2.0.12",
  "description": "Frontend input validation",
  "main": "nod.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/casperin/nod.git"
  },
  "author": "Gorm Casper",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/casperin/nod/issues"
  },
  "homepage": "https://github.com/casperin/nod",
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true
    },
    "rules": {
      "no-irregular-whitespace": 2,
      "comma-style": [2, "last"],
      "camelcase": [2, {"properties": "always"}],
      "max-depth": [2, 4],
      "max-nested-callbacks": [2, 2],
      "no-negated-condition": 2,
      "no-magic-numbers": [2, {"ignore": [-1, 0, 1]}]
    }
  }
}
